@page
@model CMS.Pages.DeleteModel

<h1>Delete Contact</h1>

<form method="post">
    <div>
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" value="@Model.FirstName" />
        <button type="submit">Delete</button>
    </div>
</form>

@if (Model.Contact != null)
{
    <h2>Contact Details</h2>

    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Contact.FirstName</td>
                <td>@Model.Contact.LastName</td>
                <td>@Model.Contact.Email</td>
                <td>@Model.Contact.Phone</td>
            </tr>
        </tbody>
    </table>
}


